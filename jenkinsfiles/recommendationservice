pipeline {
    agent any

    environment {
        AWS_REGION   = "us-east-1"
        ACCOUNT_ID   = "730335658699"
        IMAGE_NAME   = "recommendationservice"
        ECR_REPO     = "${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${IMAGE_NAME}"
        GIT_REPO     = "microservices-jenkins-project"
        GIT_USER     = "YounesM22"
        GIT_EMAIL    = "younes@example.com"
        K8S_FILE     = "recommendationservice.yaml"
    }

    stages {

        stage('Clean Workspace') {
            steps { cleanWs() }
        }

        stage('Checkout Source') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/YounesM22/microservices-jenkins-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('src/recommendationservice') {
                    sh '''
                        docker system prune -f
                        docker build -t ${IMAGE_NAME}:latest .
                    '''
                }
            }
        }

        stage('Login & Push to ECR') {
            steps {
                sh '''
                    aws ecr get-login-password --region ${AWS_REGION} \
                    | docker login --username AWS --password-stdin ${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com

                    docker tag ${IMAGE_NAME}:latest ${ECR_REPO}:${BUILD_NUMBER}
                    docker push ${ECR_REPO}:${BUILD_NUMBER}
                '''
            }
        }

        stage('Update Kubernetes Manifest') {
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'github-token', variable: 'GIT_TOKEN')]) {
                        sh '''
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER}"

                            sed -i "s#image:.*#image: ${ECR_REPO}:${BUILD_NUMBER}#g" ${K8S_FILE}

                            git add .
                            if ! git diff --cached --quiet; then
                                git commit -m "Update ${IMAGE_NAME} image to build ${BUILD_NUMBER}"
                                git push https://${GIT_TOKEN}@github.com/${GIT_USER}/${GIT_REPO}.git HEAD:main
                            else
                                echo "No changes to commit"
                            fi
                        '''
                    }
                }
            }
        }

    }
}
